<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.example.sasha.osmdroid.cash.loader.ScrollViewX
        android:id="@+id/scrollView"
        android:layout_width="match_parent"

        android:layout_height="fill_parent">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/odessa"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView3"
                android:layout_gravity="bottom"
                android:background="#ffdfdfdf"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/fab_1"
                    android:padding="5dp"
                    android:text="NAME"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/primary_text"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/detail_activity_title_size"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView9"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/detail_activity_description_size"/>
            </LinearLayout>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageView3"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/floating_action_button_margin_normal_minus"
                android:layout_marginRight="@dimen/floating_action_button_margin_normal"
                android:src="@drawable/ic_play_download_black_24dp"
                app:fab_colorNormal="@color/accent"
                app:fab_colorPressed="@color/primary_dark"
                app:fab_colorRipple="@color/accent"
                />


        </RelativeLayout>

    </com.example.sasha.osmdroid.cash.loader.ScrollViewX>

</FrameLayout>
